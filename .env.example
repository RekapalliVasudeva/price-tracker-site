# Firebase service account JSON (put the full JSON string here as one-line or use Render secret)
FIREBASE_CREDENTIALS=

# Telegram bot token for sending messages
TELEGRAM_BOT_TOKEN=

# Default backend URL (used in frontend if needed)
BACKEND_URL=https://your-backend-url.example.com

# SMTP (for email alerts) - example using SendGrid SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=price-tracker@example.com

# Optional: enable Playwright fallback for JS-heavy pages
USE_PLAYWRIGHT=false

# Optional: user agent string for requests
DEFAULT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/115 Safari/537.36

# Cron schedule for Render or any scheduler (CRON expression)
CRON_SCHEDULE=*/30 * * * *

# For local dev: FIRESTORE_EMULATOR_HOST (if using emulator)
# FIRESTORE_EMULATOR_HOST=localhost:8080
